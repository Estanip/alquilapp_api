{
    "name": "api-alquila-app-cancha",
    "version": "1.0.0",
    "description": "API Rest for tennis courts reservations",
    "main": "./src/index.ts",
    "scripts": {
        "build": "tsc",
        "start": "node ./dist/index.js",
        "dev": "nodemon",
        "swagger-doc": "node ./src/utils/swagger.ts",
        "lint": "eslint . --report-unused-disable-directives",
        "lint-fix": "eslint . --fix",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Estanip/api-alquilaAppCancha.git"
    },
    "author": "Estani Pettigrew",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Estanip/api-alquilaAppCancha/issues"
    },
    "homepage": "https://github.com/Estanip/api-alquilaAppCancha#readme",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.4.4",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@types/morgan": "^1.9.6",
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-oas-generator": "^1.0.46",
        "jsonwebtoken": "^9.0.1",
        "mongoose": "^6.4.6",
        "mongoose-to-swagger": "^1.5.1",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^5.0.0",
        "ts-dotenv": "^0.9.1",
        "winston": "^3.11.0"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/index.ts"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.tsx": "eslint --cache --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-fix && npm run format && git add -A ."
        }
    }
}
